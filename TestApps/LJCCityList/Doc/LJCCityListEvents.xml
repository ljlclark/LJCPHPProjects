<!-- LJCCityListEvents.xml -->
<items>
  <!-- Constructor Methods -->
  <constructor>
    <summary>Initializes the object instance.</summary>
    <param name="cityTableID">The city table ID.</param>
    <param name="configName">The database configuration name.</param>
    <param name="configFile">The database configuration file.</param>
  </constructor>
  <SetDialogValues>
    <summary>
      Sets the dialog values.
    </summary>
    <param name="textDialogID">The text dialog element ID value.</param>
    <param name="textAreaID">The text area element ID value.</param>
    <remarks>
      This initialization method reduces the number of parameters in the
      constructor and isolates the debugging parameters.
    </remarks>
  </SetDialogValues>
  <!-- Document Event Handlers -->
  <DocumentContextMenu>
    <summary>The Document "contextmenu" event handler.</summary>
    <param name="event">The Target event.</param>
    <remarks>Displays the City context menu.</remarks>
  </DocumentContextMenu>
  <DocumentDoubleClick>
    <summary>The Document "dblclick" handler method.</summary>
    <remarks>Performs the "Edit" menu selection.</remarks>
  </DocumentDoubleClick>
  <DocumentKeyDown>
    <summary>The Document "keydown" handler method.</summary>
    <param name="event">The Target event.</param>
    <remarks>
      Changing the selected table item is handled with the LJCTable MoveNext()
      and MovePrevious() methods. The selected table item is also changed with
      a mouse click.<br />
      If at the end of the page, the LJCCityTableEvents.NextPage() method
      generates the next page. If at the beginning of the page the
      LJCCityTableEvents.PrevPage() method generates the previous page.
    </remarks>
  </DocumentKeyDown>
  <!-- Region Menu Event Handlers -->
  <GetValue>
    <summary>
      Gets the float or int value of an html percentage or pixels.
    </summary>
    <param name="htmlValue">The HTML value string.</param>
    <returns>A float or int value.</returns>
  </GetValue>
  <PageDone>
    <summary>
      Sets the column widths and displays the dialog.
    </summary>
    <param name="regionTableEvents">The region table events object.</param>
  </PageDone>
  <!-- Other Menu Methods -->
  <CityRequest>
    <summary>Creates the city request.</summary>
    <returns>The CityData service request.</returns>
  </CityRequest>
  <FocusTableEvents>
    <summary>Retrieves the focus table events object.</summary>
    <returns>The CityTable events object.</returns>
  </FocusTableEvents>
  <!-- Web Service Methods -->
  <CityDataRequest>
    <summary>Calls the CityData web service.</summary>
    <param name="cityRequest">The CityData service request object.</param>
  </CityDataRequest>
  <SetCityForm>
    <summary>Set the City Form values.</summary>
    <param name="city">The CityData object.</param>
  </SetCityForm>
  <ShowCityDetail>
    <summary>Process the web service response.</summary>
    <param name="cityResponse">
      The CityData service response object.
    </param>
  </ShowCityDetail>
  <!-- Table Column Methods -->
  <SelectedTable>
    <summary>Gets the selected LJCTable object.</summary>
    <param name="eColumn">The table column element.</param>
    <returns>The selected table LJCTable object.</returns>
  </SelectedTable>
  <SelectedTableEvents>
    <summary>Retrieves the selected table events object.</summary>
    <param name="eColumn">The table column element.</param>
    <returns>The selected table events object.</returns>
  </SelectedTableEvents>
</items>