<!-- LJCJoins.xml -->
<items>
  <LJCJoins>
    <summary>
      Represents a collection of LJCJoin objects.
    </summary>
  </LJCJoins>
  
  <!-- Constructor Methods -->
  <Constructor>
    <summary>
      Initializes a class instance.
    </summary>
  </Constructor>
  
  <!-- Data Class Methods -->
  <Clone>
    <summary>
      Creates an object clone.
    </summary>
  </Clone>
    
  <!-- Data Methods -->
	<Add>
		<summary>
      Creates an object and adds it to the collection.
    </summary>
		<param name="$tableName">The Join table name.</param>
		<param name="$tableAlias">The Join table alias.</param>
		<param name="$key">The optional key value.</param>
		<code>
      include_once "LJCRoot.php";
      $prefix = RelativePrefix();
 		  include_once "$prefix/LJCPHPCommon/LJCDBAccessLib.php";

			$joins = new LJCJoins();
			$joins->Add("TableName", "alias");
		</code>
	</Add>
	<AddObject>
		<summary>
      Adds an object and key value.
    </summary>
		<param name="$item">The item to add to the collection.</param>
		<param name="$key">The optional key value.</param>
		<code>
      include_once "LJCRoot.php";
      $prefix = RelativePrefix();
 		  include_once "$prefix/LJCPHPCommon/LJCDBAccessLib.php";

			$joins = new LJCJoins();
			$join = new LJCJoin("TableName");
			$joins->AddObject($join);
		</code>
	</AddObject>
  <Retrieve>
		<summary>
      Retrieves the item by Key value.
    </summary>
		<param name="$key">The key value.</param>
		<param name="$throwError">The optional throw error flag.</param>
		<code>
      include_once "LJCRoot.php";
      $prefix = RelativePrefix();
 		  include_once "$prefix/LJCPHPCommon/LJCDBAccessLib.php";

			$joins = new LJCJoins();
			$joins->Add("TableName");
			$join = $joins->Get("TableName");
		</code>
	</Retrieve>
</items>